  <table class="table table-striped table-hover"
    data-ng-show ="productCategories.length>0">
      <tr class="success">
        
        <td>Category Name</td>
        <td>Details</td>
        <td>IsActive Category</td>
		<td>Created Date</td>
		<td>Action</td>
      </tr>
      <tr data-ng-repeat = "productCategory in productCategories">
        <td>{{productCategory.CategoryName}}</td>
        <td>{{productCategory.Details}}</td>
		<td>{{productCategory.IsValid == "1" ? "Valid" : "Invalid"}}</td>
		<td>{{productCategory.CreatedDate}}</td>
		<td class="info">
			<div class="btn-group">
				<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" area-exapnded="false">
				Edit Product Category <span class="caret"></span>
				</button>
				<ul class="dropdown-menu" role="menu">
					<li> <a href="/editProductCategory/{{productCategory.Id}}">Edit Product Category</a></li>
					<li> <a href="#">View Product Category</a></li>
					<li class="divider"></li>
					<li>
            <button
              type = "button"
              class ="btn btn-primary"
              data-toggle ="modal"
              data-target ="#exampleModal"
              data-categoryId ="{{productCategory.Id}}"
              data-ng-click ="setCurrentProductCategoryId(productCategory.Id)"
           >Delete Product Category
            </button>
          </li>
				
				</ul>
				</div>
		</td>
      </tr>
  </table>
